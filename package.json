  "main": "index.js",
  "type": "module",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2"
  },
  "scripts": {
    "start": "node --no-warnings --experimental-fetch ./api/dist/node/server.js",
    "install": "run-s install:api install:app",
    "install:api": "cd api && npm ci",
    "install:app": "cd app && npm ci",
    "build:api": "cd api && npm run build",
    "build:app": "cd app && npm run build",
    "build": "run-s build:app build:api",
    "deploy": "run-s pull install build reload reset",
    "pull": "git pull",
    "reload": "pm2 reload pm2.config.cjs",
    "reset": "pm2 reset all",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
